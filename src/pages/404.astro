---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="min-h-screen bg-gray-900 text-gray-100 py-12 px-4">
    <div class="max-w-5xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-8 bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 text-transparent bg-clip-text">
        404 - Sayfa Bulunamadı
      </h1>
      <p class="text-xl text-gray-300 mb-8">
        Aradığınız sayfa bulunamadı.
      </p>
      <a 
        href="/astro_seem/" 
        class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
      >
        Ana Sayfaya Dön
      </a>
    </div>
  </div>
</Layout>

<script>
// Handle client-side routing
if (window.location.pathname.startsWith('/astro_seem/')) {
  const path = window.location.pathname.replace('/astro_seem/', '');
  if (path && !path.includes('.')) {
    window.history.replaceState(null, '', '/astro_seem/' + path);
  }
}
</script> 